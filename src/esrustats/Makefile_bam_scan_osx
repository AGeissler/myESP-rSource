SRCdir = `pwd`/..
LIBdir = $(SRCdir)/lib
COMdir = $(SRCdir)/esrucom
PRJdir = $(SRCdir)/esruprj
PROG = bamstats$(EXE)
MFC = lin
MCC=gcc
MCPL=g++
MFC=gfortran
CFLAGS=-I../include -I../shocc -I/usr/local/include -I../ -I/usr/include -DLIN -g -fno-automatic -DGCC4
FFLAGS=-I../include -I../shocc -I/usr/local/include -DLIN -DX11 -g -fno-automatic -DGCC4 
LD_FLAGS=-Wl
ULIBS=-L/Users/jon/Src/cvsdude/Jon_Hand/src/lib

.SUFFIXES: .o .F
.F.o:
	$(MFC) $(FFLAGS) -c $<

OBJECTS = esru_ask.o esru_blk.o esru_fc.o esru_lib.o esru_libNonGTK.o bam_stats.o sort.o redir_console_output.o disable_h3k.o

$(PROG): $(OBJECTS)
	$(MFC) $(LD_FLAGS) -o $(PROG) $(FFLAGS) $(OBJECTS)

sort.F:
	rm -f sort.F
	ln -s $(COMdir)/sort.F .
esru_blk.F:
	rm -f esru_blk.F
	ln -s $(LIBdir)/esru_blk.F .
esru_fc.F:
	rm -f esru_fc.F
	ln -s $(LIBdir)/esru_fc.F .
esru_lib.F:
	rm -f esru_lib.F
	ln -s $(LIBdir)/esru_lib.F .
esru_libNonGTK.F:
	rm -f esru_libNonGTK.F
	ln -s $(LIBdir)/esru_libNonGTK.F .
esru_ask.F:
	rm -f esru_ask.F
	ln -s $(LIBdir)/esru_ask.F .
redir_console_output.o:
	rm -f redir_console_output.c
	ln -s $(LIBdir)/redir_console_output.c 
	$(MCC) $(LD_FLAGS) $(CFLAGS) $(GTKFLAGS) -c redir_console_output.c .
	


strip:
	@if [ -f $(PROG) ]; then strip $(PROG); fi

install:
	@if [ -f $(PROG) ]; then cp $(PROG) $(ESPBinDir); fi

clean:
	rm -f core $(PROG) $(PROG).exe $(OBJECTS) \
	sort.F esru_ask.F esru_blk.F esru_fc.F esru_lib.F esru_libNonGTK.F  
        
